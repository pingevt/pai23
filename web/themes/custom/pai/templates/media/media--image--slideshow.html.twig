{%
  set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
  ]
%}

<div class="c-inline-gallery-card">
  <div class="c-inline-gallery-card__item">

    <div{{ attributes.addClass(classes) }}>

      {{ content.field_media_image }}

      {% if not media.field_media_credit.isEmpty() and content.field_media_credit %}
        <div class="credit">{{ content.field_media_credit }}</div>
      {% endif %}
      {% if not media.field_media_caption.isEmpty() and content.field_media_caption %}
        <div class="caption">{{ content.field_media_caption }}</div>
      {% endif %}

    </div>
  </div>
</div>
