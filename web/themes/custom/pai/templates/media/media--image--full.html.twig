
{%
  set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}

  {{ content.field_media_image }}

  {% if not node.field_media_credit.isEmpty() and content.field_media_credit %}
    <div class="credits">{{ content.field_media_credit }}</div>
  {% endif %}

  {% if not node.field_media_caption.isEmpty() and content.field_media_caption %}
    <div class="caption">{{ content.field_media_caption }}</div>
  {% endif %}
</div>
