{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if exposed %}
    <div class="view-filters">
      <h2 class="u-sr-only view-filters__header">Filter Results</h2>
      {{ exposed }}
    </div>
  {% endif %}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {% if attachment_before %}
    <div class="attachment attachment-before">
      {{ attachment_before }}
    </div>
  {% endif %}

  {% if rows -%}
    <div class="view-content">
      <h2 class="u-sr-only view-content__header">Results</h2>
      {{ rows }}
    </div>
  {% elseif empty -%}
    {{ empty }}
  {% else -%}
    <div class="c-no-results" tabIndex="0">
      <p class="c-no-results--label">No results found</p>
      <p class="c-no-results--msg">Please try adjusting the filters.</p>
    </div>
  {% endif %}

  {{ pager }}

  {% if attachment_after %}
    <div class="attachment attachment-after">
      {{ attachment_after }}
    </div>
  {% endif %}

  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
